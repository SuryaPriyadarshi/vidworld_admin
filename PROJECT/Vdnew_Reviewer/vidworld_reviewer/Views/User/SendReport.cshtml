<div class="mid-container">
    <div class="container">
        <aside class="left-sidebar">
            <ul class="nwside-bar-list">
                <li><a href="#">Discover Friends</a></li>
                <li>
                    <a href="#">Invite Friends</a>
                    <ul class="sub-list">
                        <li><a href="#">Friends1</a></li>
                        <li><a href="#">Friends2</a></li>
                    </ul>
                </li>
                <li><a href="#">Link Your Account</a></li>
                <li>
                    <a href="#">Account Settings</a>
                    <ul class="sub-list">
                        <li><a href="#">Edit Profile </a></li>
                        <li><a href="#">Change Password</a></li>
                        <li><a href="#">Blocked Users</a></li>
                    </ul>
                </li>
                <li><a href="#">Revenue</a></li>
                <li class="active"><a href="#">General</a></li>
                <li><a href="#">Settings</a></li>
                <li><a href="#">Clear Search History</a></li>
                <li><a href="#">Logout</a></li>
            </ul>
        </aside>
        <div class="content-area">
            <div class="settings-right">
                <div class="attch-img">
                    <div class="pro-img">
                        <div class="edit-img">
                            <!--<img src="images/group-2.png">-->
                            <label class="upload-img">
                                <input type="file">
                                <span><i class="icon-cross"></i></span>
                                <p class="attach-con">Attach Image</p>
                            </label>
                        </div>

                    </div>
                </div>
                <form>
                    <div class="text-drop-sec">
                        <div class="text-tab drop-tab selectBox">
                            <span class="selected placeholder-styl"> Select a Subject </span>
                            <span class="selectArrow"><i class="icon-dropdown_icon"></i></span>
                            <ul class="selectOptions">
                                <li class="selectOption placeholder-text"> Select a Subject </li>
                                <li class="selectOption" data-value="Music"> Music </li>
                                <li class="selectOption" data-value="Entertainment">Entertainment </li>
                                <li class="selectOption" data-value="Art"> Art </li>
                                <li class="selectOption" data-value="Fashion"> Fashion </li>
                            </ul>
                        </div>
                        <div class="text-tab">
                            <input type="text" placeholder="Enter the Email Address on Which You Want Us to Reply">
                            <span class="inp-error">Give a title</span>
                        </div>
                    </div>
                    <div class="text-tab drop-tab">
                        <textarea rows="7" placeholder="Mention your problem here..."></textarea>
                    </div>
                    <div class="text-right pt15">
                        <input type="submit" class="btn-main signup" value="SEND">
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

