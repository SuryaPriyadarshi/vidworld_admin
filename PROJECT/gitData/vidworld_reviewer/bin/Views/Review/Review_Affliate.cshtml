@{
    ViewBag.Title = "Review_Affliate";
}

<script src="~/Scripts/Js_Controllers/Reviewer.Js"></script>

<div class="content" ng-controller="Reviewer_Post">
    <div >
        <input ng-model="Keywords" type="text" />
        <button ng-click="getAffiliate(Keywords)"> search </button>
        <div class="container">
            <ul class="ads" ng-repeat="Affiliate in Affiliates">
                <li>
                    <img src={{Affiliate.ImageLink}} height="425" width="425" alt="">
                    <label><input type="checkbox"><i class="icon-active"></i></label>
                    <div class="overlay"><a href={{Affiliate.AddLink}}>Visit</a></div>
                    <link rel="icon" href={{Affiliate.IconLink}}>
                </li>
               
            </ul>
        </div>
            <div class="add-more-product">
                <a href="~/Review/Review_Post">BACK</a>
            </div>
        </div>
</div>



